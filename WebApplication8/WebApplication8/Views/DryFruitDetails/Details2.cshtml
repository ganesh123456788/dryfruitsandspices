@model WebApplication8.Models.DryFruits
@{
    ViewBag.Title = "Details2";
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <title>D Dry Fruits</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    <script src="https://checkout.razorpay.com/v1/checkout.js"></script>
</head>
<header>
    <div class="profile-icon">
        <i class="fas fa-user-circle"></i>
        <div class="profile-dropdown">
            <a href="profile"><button>PROFILE</button></a>
            <a href="ddryfruitsandspices"><button>HOME</button></a>
            <a href="settings"><button>SETTINGS</button></a>
            <a href="adminpage"><button>SIGN OUT</button></a>
        </div>
    </div>
</header>
<style>
    body {
        background-image: url('/Content/pexels-photo-1939485.jpeg');
        background-repeat: no-repeat;
        background-attachment: fixed;
        background-size: cover;
        font-family: Arial, sans-serif;
    }

    .card-container {
        width: 30%;
        padding: 20px;
        margin: 50px auto;
        text-align: center;
        background: transparent; /* Fully transparent */
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .product-title-image {
        display: flex;
        align-items: center;
        justify-content: center;
        margin-bottom: 20px;
    }

    .product-title {
        font-weight: bold;
        font-size: 30px;
        margin-right: 20px;
    }

    .product-image {
        height: 200px;
        width: 250px;
        display: block;
        margin: 0 auto 20px auto;
    }

    .profile-dropdown button {
        width: 100%;
        padding: 4px 0;
        margin-bottom: 5px;
        font-weight: bold;
        font-size: 18px;
    }

    .profile-dropdown {
        display: none;
        position: absolute;
        text-align: center;
        background-color: white;
        padding: 10px;
        width: 150px;
        border: 1px solid #070202;
        z-index: 1000;
    }

    .profile-icon {
        position: fixed;
        top: 20px;
        right: 20px;
        font-size: 30px;
    }

        .profile-icon:hover .profile-dropdown {
            display: block;
        }

    .benefits {
        font-size: 20px;
        border: 5px solid black;
        padding: 10px;
        border-radius: 10px;
        max-width: fit-content;
        text-align: center;
        margin: 20px auto;
        background-color: rgba(255, 255, 255, 0.9); /* Slightly opaque for readability */
    }

    .buy-now-button {
        display: block;
        margin: 20px auto;
        padding: 10px 20px;
        font-size: 18px;
        font-weight: bold;
        background-color: #3399cc;
        color: white;
        border: none;
        border-radius: 5px;
        cursor: pointer;
    }
</style>
<body>
    <center>
        <a href="@Url.Action("ddryfruitsandspices", "Home")">
            <img src="/Content/ganeshdevops.jpeg-removebg-preview.png" height="150px" width="400px">
        </a>
    </center>
    <div class="card-container">
        <div class="product-title-image">
            <h1 class="product-title">@Model.ImageName</h1>
        </div>
        <img src="@Model.ImagePath" alt="Product Image" class="product-image">
        <div class="dropdown">
            <select id="dropdown-menu" style="height: 30px; width: 130px; font-size: medium;">
                <option value="250gms">250gms</option>
                
            </select>
            <h1 style="text-align: center;">Price: Rs.@Model.Price/-</h1>
            <p class="benefits">
                <b>BENEFITS:</b>
                <br>@Model.Description</br>
            </p>
        </div>
    </div>
    <script>
        document.getElementById('rzp-button1').onclick = function(e) {
            fetch('/RazorpayPayment/CreateOrder', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'X-Requested-With': 'XMLHttpRequest'
                },
                body: JSON.stringify({ amount: @Model.Price })
            })
            .then(function(response) {
                return response.json();
            })
            .then(function(data) {
                var options = {
                    "key": "your-key-id", // Replace with your Key ID
                    "amount": @Model.Price * 100, // Amount in paise
                    "currency": "INR",
                    "name": "Your Company Name",
                    "description": "Test Transaction",
                    "order_id": data.orderId,
                    "handler": function (response) {
                        window.location.href = "/RazorpayPayment/Success";
                    },
                    "prefill": {
                        "name": "Customer Name",
                        "email": "customer@example.com",
                        "contact": "9999999999"
                    },
                    "theme": {
                        "color": "#3399cc"
                    }
                };
                var rzp1 = new Razorpay(options);
                rzp1.open();
                e.preventDefault();
            });
        }
    </script>
</body>
</html>
