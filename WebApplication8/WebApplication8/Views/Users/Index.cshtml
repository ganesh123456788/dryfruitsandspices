        top: 70px;
    }

    .profile-dropdown button {
        width: 110%;
        padding: 4px 0;
        margin-bottom: 5px;
        font-weight: bold;
        font-size: 18px;
        text-align: center;
    }

    .profile-dropdown {
        display: none;
        position: absolute;
        text-align: center;
        background-color: white;
        font-size: 100%;
        padding: 10px 20px;
        width: 60%;
        size: 100%;
        border: 1px solid #070202;
    }

    .add-button {
        float: right;
        position: absolute;
        right: 280px;
        margin-left: 20px;
        font-weight: bold;
