@model IEnumerable<WebApplication8.Models.Users>
@{
    string currentRoleFilter = ViewBag.RoleFilter as string;
    string currentEmailFilter = ViewBag.EmailFilter as string;
    var roles = ViewBag.Roles as SelectList;
    var emails = ViewBag.Emails as SelectList;
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>D Dry Fruits</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"
          integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA=="
          crossorigin="anonymous" referrerpolicy="no-referrer">
    <style>
        body {
            background-image: url('/Content/pexels-photo-1939485.jpeg');
            background-repeat: no-repeat;
            background-attachment: fixed;
            background-size: cover;
            margin: 0;
            font-family: Arial, sans-serif;
        }

        header {
            position: relative;
            padding: 10px;
            background-color: rgba(0, 0, 0, 0.5);
            color: white;
        }

        .profile-icon {
            float: right;
            position: relative;
            height: 50px;
            width: 50px;
            font-size: 24px;
            cursor: pointer;
        }

        .profile-dropdown {
            display: none;
            position: absolute;
            right: 0;
            background-color: white;
            color: black;
            font-size: 16px;
            padding: 10px;
            border: 1px solid #ccc;
            width: 200px;
            box-shadow: 0px 0px 10px rgba(0,0,0,0.2);
            z-index: 1000;
        }

            .profile-dropdown button {
                width: 100%;
                padding: 10px;
                margin-bottom: 5px;
                font-weight: bold;
                font-size: 16px;
                text-align: center;
                border: none;
                background-color: #f2f2f2;
                cursor: pointer;
            }

        .profile-icon.active .profile-dropdown {
            display: block;
        }

        .add-button, .fa-cart-shopping, .fa-plus {
            position: absolute;
            top: 10px;
            margin-left: 10px;
            height: 50px;
            width: 50px;
            font-size: 24px;
        }

        .fa-cart-shopping {
            right: 100px;
        }

        .fa-plus {
            right: 150px;
        }

        .add-button {
            right: 200px;
            background-color: white;
            border: 1px solid #ccc;
            padding: 5px;
        }

        table {
            width: 90%;
            border-collapse: collapse;
            margin: 20px auto;
            background-color: white;
        }

        table, th, td {
            border: 2px solid black;
        }

        th, td {
            padding: 10px;
            text-align: center;
        }

        th {
            background-color: #f2f2f2;
        }

        .button-container {
            display: flex;
            justify-content: center;
            margin: 20px;
        }

            .button-container a {
                margin-right: 10px;
            }

        .description-column {
            width: 30%;
            max-width: 300px;
            word-wrap: break-word;
        }

        .filter-section {
            text-align: center;
            margin: 20px;
            position: relative;
        }

        .filter-icon-wrapper {
            position: relative;
            display: inline-block;
        }

        .filter-section .fa-filter {
            font-size: 20px;
            color: #666;
            cursor: pointer;
        }

        .filter-dropdown {
            display: none;
            position: absolute;
            top: 100%;
            left: 0;
            background-color: white;
            padding: 10px;
            border: 1px solid #ccc;
            width: 100%;
            box-shadow: 0px 0px 10px rgba(0,0,0,0.2);
            z-index: 1000;
        }

            .filter-dropdown select {
                font-size: 16px;
                width: 100%;
                padding: 5px;
            }

        media (max-width: 768px) {
            .add-button, .fa-cart-shopping, .fa-plus

        {
            font-size: 20px;
            height: 40px;
            width: 40px;
        }

        .dropdown-container {
            position: relative;
            display: inline-block;
        }

        .dropdown-content {
            display: none; /* Hidden by default */
            position: absolute;
            background-color: #f9f9f9;
            min-width: 160px;
            box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2);
            z-index: 1;
        }

            .dropdown-content a {
                color: black;
                padding: 12px 16px;
                text-decoration: none;
                display: block;
            }

                .dropdown-content a:hover {
                    background-color: #f1f1f1
                }

        .dropdown-button.active + .dropdown-content {
            display: block; /* Show when button is active */
        }


        table {
            width: 100%;
            font-size: 14px;
        }

        .filter-section .fa-filter {
            font-size: 16px;
        }
        }
    </style>
</head>
<body>
    <header>
        <div class="profile-icon" onclick="toggleDropdown()">
            <i class="fas fa-user-circle"></i>
            <div class="profile-dropdown">
                <a href="@Url.Action("EditUser", "Login")"><button>PROFILE</button></a>
                <a href="@Url.Action("ddryfruitsandspices", "Home")"><button>HOME</button></a>
                <a href="@Url.Action("UserDetails", "Login")"><button>SETTINGS</button></a>
                <a href="@Url.Action("Login", "Login")"><button>LOG OUT</button></a>
            </div>
        </div>
    </header>

    <main>
        <center>
            <a href="@Url.Action("ddryfruitsandspices", "Home")">
                <img src="/Content/ganeshdevops.jpeg-removebg-preview.png" alt="D Dry Fruits" height="150px" width="400px">
            </a>
            <h2>User List</h2>
        </center>

        <div class="filter-section">
            <div class="filter-icon-wrapper">
                <i class="fa fa-filter" onclick="toggleFilterDropdown()"></i>
                <div class="filter-dropdown">
                    <form method="get" action="@Url.Action("Index")">
                        @Html.DropDownList("roleFilter", roles, "Select Role", new { @class = "form-control", id = "roleFilter", onchange = "this.form.submit();" })
                    </form>
                </div>
            </div>
        </div>



        <div style="text-align: center;">
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            First Name
                            @Html.DropDownList("firstNameFilter", ViewBag.FirstNames as SelectList, "All First Names", new { @class = "form-control", onchange = "this.form.submit();" })
                        </th>
                        <th>
                            Last Name
                            @Html.DropDownList("lastNameFilter", ViewBag.LastNames as SelectList, "All Last Names", new { @class = "form-control", onchange = "this.form.submit();" })
                        </th>
                        <th>
                            Email
                            @Html.DropDownList("emailFilter", ViewBag.Emails as SelectList, "All Emails", new { @class = "form-control", onchange = "this.form.submit();" })
                            <div class="filter-section">
                                <div class="filter-icon-wrapper">
                                    <i class="fa fa-filter filter-icon" onclick="toggleFilterDropdown()"></i>
                                    <div class="filter-dropdown">
                                        <form method="get" action="@Url.Action("Index")">
                                            @Html.DropDownList("roleFilter", roles, "Select Role", new { @class = "form-control", id = "roleFilter", onchange = "this.form.submit();" })
                                            @Html.DropDownList("emailFilter", emails, "Select Email", new { @class = "form-control", id = "emailFilter", onchange = "this.form.submit();" })
                                        </form>
                                    </div>
                                </div>
                            </div>
                            <script>
                                function toggleFilterDropdown() {
                                    var dropdown = document.querySelector('.filter-dropdown');
                                    dropdown.style.display = dropdown.style.display === 'block' ? 'none' : 'block';
                                }

                                function toggleEmailFilterDropdown() {
                                    var dropdown = document.querySelector('.email-filter-dropdown');
                                    dropdown.style.display = dropdown.style.display === 'block' ? 'none' : 'block';
                                }

                                document.addEventListener('click', function (event) {
                                    var filterIconWrapper = document.querySelector('.filter-icon-wrapper');
                                    var emailFilterDropdown = document.querySelector('.email-filter-dropdown');
                                    if (!filterIconWrapper.contains(event.target)) {
                                        emailFilterDropdown.style.display = 'none';
                                    }
                                });

                                function toggleDropdown() {
                                    var profileIcon = document.querySelector('.profile-icon');
                                    profileIcon.classList.toggle('active');
                                }
                            </script>
                        </th>
                        <th>
                            Role
                            <div class="dropdown-container">
                                <button class="dropdown-button" aria-haspopup="true" aria-expanded="false">
                                    <i class="fas fa-filter filter-icon"></i>
                                </button>
                                <div class="dropdown-content">
                                    <a href="@Url.Action("Index", "Users")" role="menuitem">All Roles</a>
                                    @foreach (var role in roles)
                                    {
                                        <a href="@Url.Action("Index", "Users", new { roleFilter = role.Value })"
                                           role="menuitem"
                                           @(role.Value == currentRoleFilter ? "class='active'" : "")>
                                            @role.Text
                                        </a>
                                    }
                                </div>
                            </div>

                            <script>
                                document.querySelector('.dropdown-button').addEventListener('click', function () {
                                    var dropdownContent = document.querySelector('.dropdown-content');
                                    var expanded = this.getAttribute('aria-expanded') === 'true';
                                    dropdownContent.style.display = expanded ? 'none' : 'block';
                                    this.setAttribute('aria-expanded', !expanded);
                                });
                            </script>

                            <!-- Role dropdown is now in filter-section -->
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model)
                    {
                        <tr>
                            <td>@user.FirstName</td>
                            <td>@user.LastName</td>
                            <td>@user.Email</td>
                            <td>@user.Role</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </main>

    <script>
        function toggleFilterDropdown() {
            var dropdown = document.querySelector('.filter-dropdown');
            dropdown.style.display = dropdown.style.display === 'block' ? 'none' : 'block';
        }

        document.addEventListener('click', function (event) {
            var filterIconWrapper = document.querySelector('.filter-icon-wrapper');
            var dropdown = document.querySelector('.filter-dropdown');
            if (!filterIconWrapper.contains(event.target)) {
                dropdown.style.display = 'none';
            }
        });

        function toggleDropdown() {
            var profileIcon = document.querySelector('.profile-icon');
            profileIcon.classList.toggle('active');
        }
    </script>
</body>
</html>
