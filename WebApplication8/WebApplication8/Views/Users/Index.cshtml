<body>
    <center>
        <a>
            <a href="@Url.Action("ddryfruitsandspices", "Home")">
                <img src="/Content/ganeshdevops.jpeg-removebg-preview.png" height="150px" width="400px">
            </a>
            <h2>User List</h2>
    </center>
    <form method="get" action="@Url.Action("Index")">
        <div class="form-group">
            <label for="roleFilter">Role:</label>
            @Html.DropDownList("roleFilter", roles, "Select Role", new { @class = "form-control", id = "roleFilter" })
        </div>
        <button type="submit" class="btn btn-primary">Filter</button>
    </form>
    <Center>
        <table class="table">
            <thead>
                <tr>
                    <th>
                        First Name
                        @Html.DropDownList("firstNameFilter", ViewBag.FirstNames as SelectList, "All First Names", new { @class = "form-control", onchange = "this.form.submit();" })
                    </th>
                    <th>
                        Last Name
                        @Html.DropDownList("lastNameFilter", ViewBag.LastNames as SelectList, "All Last Names", new { @class = "form-control", onchange = "this.form.submit();" })
                    </th>
                    <th>
                        Email
                        @Html.DropDownList("emailFilter", ViewBag.Emails as SelectList, "All Emails", new { @class = "form-control", onchange = "this.form.submit();" })
                    </th>
                    <th>
                        Role
                        <!-- Add a dropdown in the header to filter by role -->
                        @Html.DropDownList("roleFilterHeader", roles, "Select Role", new { @class = "form-control", id = "roleFilterHeader", onchange = "filterByRole()" })
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <td>@user.FirstName</td>
                        <td>@user.LastName</td>
                        <td>@user.Email</td>
                        <td>@user.Role</td>
                    </tr>
                }
            </tbody>
        </table>

        <script type="text/javascript">
    function filterByRole() {
        var role = document.getElementById('roleFilterHeader').value;
        window.location.href = '@Url.Action("Index", "Users")' + '?roleFilter=' + encodeURIComponent(role);
    }
        </script>
    </Center>
