@model IEnumerable<WebApplication8.Models.Chocolate>
@{
    ViewBag.Title = "Chocolate Index";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <title>Dry Fruits</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"
          integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <style>
        body {
            background-image: url('/Content/pexels-photo-1939485.jpeg');
            background-repeat: no-repeat;
            background-attachment: fixed;
            background-size: 100%;
        }

        table {
            width: 90%;
            border-collapse: collapse;
        }

        table, th, td {
            border: 2px solid black;
        }

        th, td {
            padding: 10px;
            text-align: center;
        }

        th {
            background-color: #f2f2f2;
        }

        .fa-cart-shopping {
            float: right;
            position: absolute;
            right: 100px;
            margin-left: 10px;
            height: 150px;
            width: 150px;
            font-size: 30px;
            top: 70px;
        }

        .fa-plus {
            float: right;
            position: absolute;
            right: 250px;
            margin-left: 10px;
            height: 150px;
            width: 150px;
            font-size: 30px;
            top: 70px;
        }

        .profile-dropdown button {
            width: 110%;
            padding: 4px 0;
            margin-bottom: 5px;
            font-weight: bold;
            font-size: 18px;
            text-align: center;
        }

        .profile-dropdown {
            display: none;
            position: absolute;
            text-align: center;
            background-color: white;
            font-size: 100%;
            padding: 10px 20px;
            width: 60%;
            size: 100%;
            border: 1px solid #070202;
        }

        .add-button {
            float: right;
            position: absolute;
            right: 280px;
            margin-left: 20px;
            font-weight: bold;
            height: 30px;
            width: 38px;
            font-size: 14px;
            top: 70px;
            padding: 1px;
            background-color: white;
        }

        .button {
            display: inline-block;
            padding: 8px 16px;
            margin-right: 8px;
            background-color: #4CAF50;
            color: white;
            border: none;
            border-radius: 4px;
        }

        .button-container {
            display: flex;
        }

            .button-container a {
                margin-right: 10px;
            }

        .profile-settings {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 10px;
        }

        .description-column {
            width: 30%; /* Adjust as needed */
            max-width: 300px; /* Optional: Set a max-width to prevent excessive width */
            word-wrap: break-word; /* Ensure long words wrap */
        }

        .profile-icon {
            float: right;
            position: absolute;
            right: 10px;
            margin-left: 30px;
            height: 150px;
            width: 150px;
            font-size: 30px;
            top: 70px;
        }

            .profile-icon:hover .profile-dropdown {
                display: block;
            }

        .small-image {
            width: 50px; /* Set your desired width */
            height: 50px; /* Set your desired height */
        }
    </style>
</head>
<body>
    <header>
        <div class="profile-icon">
            <i class="fas fa-user-circle"></i>
            <div class="profile-dropdown">
                <a href="@Url.Action("EditUser", "Login")"> <button onclick="myFunction()">PROFILE</button></a>
                <a href="@Url.Action("ddryfruitsandspices", "Home")"> <button onclick="myFunction()">HOME</button></a>
                <a href="@Url.Action("UserDetails", "Login")"> <button onclick="myFunction()">SETTINGS</button></a>
                <a href="@Url.Action("Login", "Login")"><button onclick="myFunction()">SIGN OUT</button></a>
            </div>
        </div>
        <div class="SWITCH"></div>
        <a href="@Url.Action("Create")">
            <button class="add-button">ADD</button>
        </a>
    </header>

    <center>
        <a href="@Url.Action("ddryfruitsandspices", "Home")">
            <img src="/Content/ganeshdevops.jpeg-removebg-preview.png" height="150px" width="400px">
        </a>
    </center>

    <center>
        <h2>Chocolates</h2>

        <table>
            <tr>
                <th>ITEM NAME</th>
                <th>IMAGE</th>
                <th>DESCRIPTION</th>
                <th>PRICE</th>
                <th>ShortStory</th>
                <th></th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.ImageName)</td>
                    <td>
                        @if (item.ImagePath != null)
                        {
                            <img src="@Url.Content(item.ImagePath)" alt="@item.ImageName" class="small-image" />
                        }
                    </td>
                    <td class="description-column">@Html.DisplayFor(modelItem => item.Description)</td>
                    <td>@Html.DisplayFor(modelItem => item.Price)</td>
                    <td class="description-column">@Html.DisplayFor(modelItem => item.ShortStory)</td>


                    <td>
                        <button>@Html.ActionLink("Edit", "Edit", new { imageName = item.ImageName })</button> |
                        <button>@Html.ActionLink("Delete", "Delete", new { imageName = item.ImageName })</button>
                    </td>
                </tr>
            }
        </table>
    </center>
</body>
</html>
